<h1><%= @trip.name.titleize%></h1>

<p> Departure Date: <%= @trip.start_date %></p>
<p> Departure Flight Number: <%=  %></p>
<p> Departing From: </p>
<p> Return Date: <%= @trip.end_date %></p>
<p> Arriving At: </p>
<p> Countries being visited: </p>
<p> Activities: </p>

<a href="<%=@trip.id%>/edit"><button type="button">Edit Trip</button></a>
<%= form_tag(trip_path(@trip), method: "delete") %>
  <%= submit_tag "Delete Trip" %><br>
<%= form_tag(trips_path(@trips), method: "get") %>
  <%= submit_tag "Return to All Trips" %>
<br>

  <ul>
    <%Trip.all.each do |trip|%>
      <%trip.flights.each do |flight|%>
        <%flight.country_id%>
        <li class="list-group-item text-center">Country:
        <%=Country.find_by(id:flight.country_id).name%><br>
        Currency: <%=Country.find_by(id:flight.country_id).currency %></li>
      <%end%>
    <%end%>
  </ul>
