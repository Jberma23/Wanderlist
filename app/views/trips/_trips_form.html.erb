<%= form_for :trip do |f| %>
  <%= f.label :start_date %><br>
  <%= f.date_field  :start_date %>
  <br>
  <br>
  <%= f.label :end_date %><br>
  <%= f.date_field :end_date %>
  <br>
  <br>
  <%= fields_for @users do |c|%>
  <%= c.label :user_id %><br>
  <%= c.collection_select :user_id, User.all, :id, :name %>
  <br>
  <br>
  <%end%>
  <%= fields_for @flights do |p|%>
    <%=p.label :flight_number%><br>
    <%=p.number_field :flight_number%>
    <br>
    <br>
    <%=p.label :final_destination%><br>
    <%=p.collection_select :country_ids, Country.all, :id, :name%>
    <br>
    <br>
    <%=p.label :origin_airport%><br>
    <%=p.collection_select :origin_airport, Flight.all, :id, :origin_airport%><br>
    <br>
    <%=p.label :destination_airport%><br>
    <%=p.collection_select :destination_airport, Flight.all, :id, :destination_airport%>
    <br>
    <br>
  <%end%>
  <br>
  <%= f.submit %>
<%end%>
