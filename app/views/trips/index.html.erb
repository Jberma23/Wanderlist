<h1 class="text-center"> Lists of Trips </h1>
<div >
  <ul>
    <% @trips.sort_by{|trip| trip.start_date}.each do |trip| %>
      <%if trip.end_date < Date.today%>
      <li><a href="/users/<%=trip.user.id%>" class="text-primary"><%=trip.user.name%></a> traveled from <a href="/<%=trip.id%>" class="text-secondary"><%= trip.start_date %> to  <%= trip.end_date%></a></li>
      <%else%> 
      <li><a href="/users/<%=trip.user.id%>" class="text-primary"><%=trip.user.name%></a> is traveling from <a href="/<%=trip.id%>" class="text-secondary"><%= trip.start_date %> to  <%= trip.end_date%></a></li>
      <%end%>
    <% end %>
  </ul>
</div>
