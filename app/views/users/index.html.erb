<h3 style="font-family: 'Permanent Marker', cursive; text-align: center;">All users:</h3>
<%arr = []%>
<%100.times do%>
<%arr << "https://randomuser.me/api/portraits/men/#{rand(1...99)}.jpg"%>
<%arr << "https://randomuser.me/api/portraits/women/#{rand(1...99)}.jpg"%>
<%end%>
<%#  %>


<div class="card-deck">
  <div class="card-columns">
    <% @users.each do |user| %>
    <div class="card ml-5 border-dark mr-3 mb-3 mt-0 ml-0" style="width: 18rem;">
    <img class="card-img-top" style="height: 100px; width: 150px;" src="<%=arr.sample%>" alt="Card image cap">
  <div class="card-body"><%=user.id%>
    <h5 class="card-title"><%= link_to user.name, user_path(user), class: "text-secondary"%></h5>
      <p class="card-text text-black">Number of Posts <%= user.posts.count%></p>
      <p class="card-text text-black">Number of Post likes <%= user.likes.count%></p>
      <p class="card-text text-black">Number of Trips <%= user.trips.count%></p>
    <a href="users/<%=user.id%>" class="btn btn-primary">See Their Page</a>
  </div>
</div>
 <%end%> 