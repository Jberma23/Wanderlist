<h1 class="text-center"><u><%=current_user.name.titleize%>'s Trips</u></h1>

<br>
<br>

<h2 class="text-center"> Upcoming Trips </h2>




<div class="card-deck justify-content-md-center">
<%current_user.trips.each do |trip|%>
<%if trip.end_date > Date.today%>
<div class="row">
<div class="card bg-light mb-3" style="max-width: 18rem;">
      <h4 class="card-header"><%= link_to trip.name.titleize, trip_path(trip) %></h4>
      <div class="card-body">
      <p class="card-text">Trip start date: <%=trip.start_date%></p>
      <p class="card-text">Trip end date: <%=trip.end_date%>.</p>
      </div>
      <br>
</div>
&nbsp&nbsp&nbsp&nbsp&nbsp
</div>
<% end %>
<% end %>
</div>

<br>
<br>

<h2 class="text-center"> Past trips </h2>

<div class="card-deck justify-content-md-center">
<%current_user.trips.each do |trip|%>
      <%if trip.end_date < Date.today%>
      <div class="row">
      <div class="card bg-light mb-3" style="max-width: 18rem;">
            <h4 class="card-header"><%= link_to trip.name.titleize, trip_path(trip) %></h4>
            <div class="card-body">
            <p class="card-text">Trip start date: <%=trip.start_date%></p>
            <p class="card-text">Trip end date: <%=trip.end_date%>.</p>
            </div>
      </div>
      &nbsp&nbsp&nbsp&nbsp&nbsp
      </div>
      <% end %>
      <% end %>
      </div>

<br>
<br>
      
  <h2 class="text-center">Countries Visited</h2>
  
  <div class="card-deck justify-content-md-center">
  <%if current_user.user_trip_countries != [] %>
  <%current_user.countries.uniq.each do |country|%>
  <div class="row">
  <div class="card bg-light mb-3" style="max-width: 18rem;">
  <h4 class="card-header"><%=country.name%></h4>
  <div class="card-body">
    <h5 class="card-title">Currency: <%=country.currency %></h5>
    </div>
    </div>
    &nbsp&nbsp&nbsp&nbsp&nbsp
    </div>
    <%end%>
    <%end%>
</div>

  