
<h1 class="text-center"><u><%=@user.name.capitalize%>'s Trips</u></h1>

<h2 class="text-center"> Upcoming Trips </h2>
<ul>
  <% Trip.all.sort_by{|trip| trip.start_date}.each do |trip| %>
    <%trip.flights.each do |flight|%>
    <% if trip.end_date > Date.today %>
      <li class= "list-group-item text-center" > Trip Name: <%= link_to trip.name, trip %>
    <% end %>
  <% end %>
<% end %>
</ul>

<h2 class="text-center"> Past trips </h2>
<div data-spy="scroll" data-target="#navbar-example3" data-offset="0">
<ul>
  <% Trip.all.sort_by {|trip| trip.start_date}.each do |trip| %>
    <% if trip.end_date < Date.today  %>
      <li class= "list-group-item text-center" > Trip Name: <%= link_to trip.name, trip %>
      <% end %>
  <% end %>
</ul>
</div>



