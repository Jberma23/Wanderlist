<div class="container">
<%= form_for :activity do |f| %>
 <div class="form-group">
 <%= f.label :activity, class: "form-text"%><br>
 <%= f.text_field :name, class:"form-control", placeholder: "Activity Name" %>
 </div>
 <div class="form-group">
 <%= f.label :description, class: "form-text"%><br>
 <%= f.text_field :description, class:"form-control", placeholder: "Activity Description" %>
 </div>
 <div class="form-group">
 <%= f.label :trip, class: "form-text"%><br>
 <%= f.text_field :trip, class:"form-control", placeholder: "Trip"%>
 </div>
 <div class="form-group">
 <%= f.submit "Submit", class: "btn btn-primary" %>
 </div>
<%end %>
